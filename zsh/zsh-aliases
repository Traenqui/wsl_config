# Navigation 
alias ..="cd .."
alias ...="cd ../.."
alias ....="cd ../../.."

# Networking
alias ipa="ip addr show"

# Process management
alias psa="ps aux"
alias psg="ps aux | grep"

# listing
alias ls='exa --icons -F -H --group-directories-first --git -1'                  # ls
alias l='exa -lbF --git --icons'                                                 # list, size, type, git
alias ll='exa -lbGF --git --icons'                                               # long list
alias llm='exa -lbGd --git --sort=modified --icons'                              # long list, modified date sort
alias la='exa -lbhHigUmuSa --time-style=long-iso --git --color-scale --icons'    # all list
alias lx='exa -lbhHigUmuSa@ --time-style=long-iso --git --color-scale --icons'   # all + extended list
alias lS='exa -1 --icons'                                                        # one column, just names
alias lt='exa --tree --level=2 --icons'                                          # tree

# Personal
alias dotproj='$HOME/.dotfiles/scripts/new-dotnet-project.sh'
alias dotrepo='$HOME/.dotfiles/scripts/new-dotnet-repo.sh'

alias work="cd /mnt/c/repos/work"
alias study="cd /mnt/c/repos/study"
alias dot="cd ~/.dotfiles"
alias conf="cd ~/.config"

alias nvim=nvimenv
alias vi=nvim

alias latex-clean='find . -type f \( -name "*.aux" -o -name "*.log" -o -name "*.out" -o -name "*.toc" -o -name "*.bbl" -o -name "*.blg" -o -name "*.fdb_latexmk" -o -name "*.fls" -o -name "*.synctex.gz" \) -exec rm {} +'

alias nvim-lazy="NVIM_APPNAME=LazyVim nvim"
alias nvim-kick="NVIM_APPNAME=kickstart nvim"
alias nvim-hammer="NVIM_APPNAME=HammerVim nvim"
alias nvim-astro="NVIM_APPNAME=AstroNvim nvim"

